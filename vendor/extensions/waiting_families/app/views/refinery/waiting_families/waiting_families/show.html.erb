<% content_for :body_content_title do %>
  <%= @waiting_family.title %>
<% end %>

<% content_for :body do %>
  <div class="grid">
    <div class="grid-col grid-col_size12of12">
        <div class="gallery-carousel">
            <ul class="images">
                <% @waiting_family.all_images.each do |image| %>
                  <li class="image"><img src="<%= image.thumbnail("640x390").url %>"/></li>
                <% end %>
            </ul>
            <a href="javascript:void(0);" class="navigation">
                <div class="buttons">
                    <div class="button previous"></div>
                    <div class="button next"></div>
                </div>
            </a>
        </div>
    </div>
  </div>

  <div class="grid">
    <div class="grid-col grid-col_size12of12">
      <div class="event-bd event-bd_highlight">
        <h3><%= @waiting_family.title %></h3>
      </div>
    </div>
  </div>
  <div class="grid">
    <div class="grid-col grid-col_size6of12">
      <div class="feature">
      <%=raw @waiting_family.detailed_information %>
      </div>
    </div>
    <div class="grid-col grid-col_size6of12">
      <div class="feature">
      <%=raw @waiting_family.body %>
    </div>
    </div>
  </div>
<% end %>

<%= render '/refinery/content_page' %>
