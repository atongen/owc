<% content_for :body do %>
  <ul id="waiting_families">
    <% @waiting_families.each_slice(3) do |families| %>
      <% families.each do |family| %>
        <div class="grid">
          <div class="grid-col grid-col_size4of12">
            <div class="event">
              <div class="event-img">
                <%= link_to image_fu(family.picture, '306x229'), refinery.waiting_families_waiting_family_path(family) %>
              </div>
              <div class="event-bd event-bd_highlight">
                <%= raw family.summary %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </ul>
<% end %>

<%= render '/refinery/content_page' %>
