<% content_for :body do %>
  <% @waiting_families.each_slice(3) do |families| %>
    <div class="grid">
      <% families.each do |family| %>
        <div class="grid-col grid-col_size4of12">
          <div class="event">
            <div class="event-img">
              <%= link_to image_tag(family.picture.thumbnail('306x229#c').url), refinery.waiting_families_waiting_family_path(family) %>
            </div>
            <div class="event-bd event-bd_highlight">
              <h3><%= link_to family.title, refinery.waiting_families_waiting_family_path(family) %></h3>
              <%= raw family.summary %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<%= render '/refinery/content_page' %>
