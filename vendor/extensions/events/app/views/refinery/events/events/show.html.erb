<% content_for :body_content_title do %>
  <%= @event.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @event.title %>
    </p>
  </section>
  <section>
    <h1>Summary</h1>
    <p>
      <%=raw @event.summary %>
    </p>
  </section>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @event.body %>
    </p>
  </section>
  <section>
    <h1>Start Date</h1>
    <p>
      <%=raw @event.start_date %>
    </p>
  </section>
  <section>
    <h1>End Date</h1>
    <p>
      <%=raw @event.end_date %>
    </p>
  </section>
  <section>
    <h1>Pdf Link</h1>
    <p>
      <% if @event.pdf_link.present? %>
        <%= link_to 'pdf_link', @event.pdf_link.url %>
      <% else %>
        pdf_link
      <% end %>
    </p>
  </section>
  <section>
    <h1>Category Type</h1>
    <p>
      <%=raw @event.category_type %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.title, refinery.events_event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
