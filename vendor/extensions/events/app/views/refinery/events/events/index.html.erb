<% content_for :body do %>
    <% if @events.count > 0 %>
        <% @events.each do |event| %>
            <div class="grid">
                <div class="grid-col grid-col_size8of12">
                    <div class="gallery-carousel">
                        <ul class="images">
                            <% event.images.each do |image| %>
                              <li class="image"><img src="<%= image.thumbnail("618x390").url %>"/></li>
                            <% end %>
                        </ul>
                        <a href="javascript:void(0);" class="navigation">
                            <div class="buttons">
                                <div class="button previous"></div>
                                <div class="button next"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="grid-col grid-col_size4of12">
                    <h3><%= event.title %></h3>
                    <h3><%= event.start_date.to_time.strftime('%B %e at %l:%M %p') %></h3>
                    <%= raw(event.body) %>
                </div>
            </div>
        <% end %>
    <% else %>
        <h3>There are no events</h3>
    <% end %>
<% end %>
<%= render '/refinery/content_page' %>