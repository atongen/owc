<% content_for :body do %>
  <% @staffs.each_slice(2) do |parts| %>
    <div class="grid">
      <% parts.each do |part| %>
        <div class="grid-col grid-col_size6of12">
          <div class="gap gap_2">
            <div class="media">
              <div class="media-img">
                <%= image_fu(part.picture, '220x250#c') %>
              </div>
              <div class="media-bd">
                <h3><%= part.full_name %></h3>
                <h4><%= part.title %></h4>
                <% if part.summary.present? %>
                  <p><%= part.summary %></p>
                <% end %>
                <% if !part.board? && part.email.present? %>
                  <p><%= mail_to part.email, 'Email', :title => part.email %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<%= render '/refinery/content_page' %>
