<%= form_for [refinery, :staffs_admin, @staff] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @staff,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :full_name -%>
    <%= f.text_field :full_name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>
  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>
  </div>

  <div class='field'>
    <%= f.label :staff_type -%>
    <%= f.select(:staff_type, ["Staff", "Board"])%>
  </div>
  
  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :picture_id,
               :image => @staff.picture,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.staffs.admin.staffs.staff'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @staff.full_name) %>
<% end -%>
