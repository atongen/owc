<ul>
  <% if ::Refinery::WaitingKids::Admin::WaitingKidsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.waiting_kids_admin_waiting_kids_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_waiting_kids_admin_waiting_kid_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::WaitingKids::Admin::WaitingKidsController.sortable? && ::Refinery::WaitingKids::WaitingKid.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Waiting Kids"),
                 refinery.waiting_kids_admin_waiting_kids_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Waiting Kids"),
                 refinery.waiting_kids_admin_waiting_kids_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
