<% content_for :body do %>
  <%= render :file => 'refinery/pages/show' %>

  <%  @waiting_kids.each_slice(3) do |kids| %>
    <div class="grid">
      <% kids.each do |kid| %>
        <div class="grid-col grid-col_size4of12">
            <div class="event">
                <div class="event-img">
                    <%= link_to image_fu(kid.picture, '200x200'), refinery.waiting_kids_waiting_kid_path(kid) %>
                </div>
                <div class="event-bd event-bd_highlight">
                    <h3><%= link_to kid.title, refinery.waiting_kids_waiting_kid_path(kid) %></h3>
                    <%= raw kid.summary %>
                </div>
            </div>
        </div>
      <% end %>
    </div>
    <% end %>
<% end %>

<%= render '/refinery/content_page' %>
