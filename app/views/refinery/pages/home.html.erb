<div class="hero-carousel">
  <ul class="slides"> <%# 660 x 500%>
    <% carousel_images.each_with_index do |image,index| %>
      <li class="<%= image.css_class %><%= index == 0 ? ' active' : ''%>">
        <div class="hero-carousel-bd">
          <h2 class="sans-serif"><%= image.title %></h2>
          <%= raw image.copy %>
          <%= link_to('Learn More', image.page.link_url, :class => 'sans-serif') %>
        </div>
        <% if image.picture.present? %>
          <div class="hero-carousel-img">
            <%= image_fu image.picture, '660x500#c' %>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<!-- body content -->
<div class="grid">
  <div class="sectionHdg">
    <h2 class="hdg hdg_inline">ABOUT US</h2>
  </div>
  <div class="bigCopy copy_center">
    <%= raw @page.content_for :body %>
  </div>
</div>

<!-- feature items -->
<div class="grid">
  <% featured_items.each do |item| %>
  <div class="grid-col grid-col_size4of12">
    <div class="event">
      <div class="event-img">
        <%= link_to(image_tag(item[:picture].thumbnail("306x229#c").url), item[:link]) %>
      </div>
      <div class="event-caption <%= get_callout_class(item[:type]) %>">
        <h3><%= get_callout_name item[:type] %></h3>
      </div>
      <div class="event-bd">
        <h3><%= link_to(item[:text], item[:link]) %></h3>
        <%= raw(item[:summary]) %>
      </div>
    </div>
  </div>
  <% end %>
</div>
