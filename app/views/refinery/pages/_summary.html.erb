<div class="site-bd">
  <div class="wrapper">
      <div class="grid">
        <div class="pageHdg">
          <% if @page.parent.nil? %>
            <h2 class="pageHdg-hd"><%= @page.title %></h2>
          <% else %>
            <h2 class="pageHdg-hd"><%= @page.parent.title %></h2>
            <h3 class="pageHd-sub"><%= @page.title %></h3>
          <% end %>
        </div>
      </div>
      <div class="grid">
          <%= raw @page.content_for(:summary) %>
      </div>
  </div>
</div>