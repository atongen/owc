<% path = refinery.url_for(menu_branch.url) %>
<li class="<%= get_page_color path %>">
<%= link_to(menu_branch.title, path, :class => (menu_branch_counter == sibling_count ? 'lastItem' : '')) -%>
<% if menu_branch.children.count > 0 %>
  <ul class="navList-sub">
    <% menu_branch.children.each do |link| %>
      <li><%= link_to(link.title, refinery.url_for(link.url)) -%></li>
    <% end %>
  </ul>
<% end %>
</li>
