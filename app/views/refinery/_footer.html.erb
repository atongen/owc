<div class="site-ft">
        <div class="wrapper">
            <div class="donate">
                <a class="donate-btn" href="/get-involved/donate">donate</a>
            </div>
            <div class="site-ft-box">
                <div class="grid">
                    <div class="grid-col grid-col_size3of12">
                        <div class="site-ft-logo">
                            <a href="/"><img src="/assets/hope_logo_footer.png" /></a>
                        </div>
                    </div>
                    <div class="grid-col grid-col_size3of12">
                        <ul class="vList vList_footer">
                            <li><%= link_to "Get Involved", "/get-involved" %></li>
                            <!-- <li><%= link_to "Site Map", "/sitemap.xml" %></li> -->
                            <li><%= link_to "Privacy Policy", "/pages/privacy-policy", :id => "privacy_link" if Refinery::Inquiries.show_contact_privacy_link %></li>
                            <li><a href="">Terms</a></li>
                        </ul>
                    </div>
                    <div class="grid-col grid-col_size6of12">
                        <ul class="vList vList_footer">
                            <li><%= link_to "Contact", "/contact" %></li>
                            <li><a href="http://www.coanet.org/programs/hague-accreditation-and-approval/public-comment/" target="_blank"><img src="/assets/hague_accredited.png" alt="Hague Accredited" /></a></li>
