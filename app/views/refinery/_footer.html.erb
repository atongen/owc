                        </ul>
                    </div>
                </div>
                <!-- /grid -->
                <div class="grid">
                    <div class="grid-col grid-col_prefix3of12 grid-col_size7of12">
                        <div class="legalese">
                            <p>Copyright &copy; 2012 HOPE Adoption &amp; Family Services International, Inc.</p>
                        </div>
                    </div>
                    <div class="grid-col grid-col_size2of12">
                        <ul class="hList hList_social">
                            <% if facebook_url.present? %><li><a href="<%= facebook_url %>" target="_blank">Facebook</a></li><% end %>
                            <% if twitter_url.present? %><li><a class="twitter" href="<%= twitter_url %>" target="_blank">Twitter</a></li><% end %>
                            <% if youtube_url.present? %><li><a class="youtube" href="<%= youtube_url %>" target="_blank">Youtube</a></li><% end %>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /site-ft-box -->
        </div>
    </div>
